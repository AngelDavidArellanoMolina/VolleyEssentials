<!-- res/drawable/custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/naranja_buttons2" /> <!-- Color de fondo cuando se presiona -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <!-- Estado por defecto -->
    <item>
        <shape>
            <solid android:color="@color/naranja_buttons" /> <!-- Color de fondo por defecto -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>
