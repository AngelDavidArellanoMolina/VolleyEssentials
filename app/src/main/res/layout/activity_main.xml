<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/azul_pista">

    <RelativeLayout
        android:id="@+id/fieldLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/azul_pista"
        android:layout_alignParentTop="true">

        <!-- Contenedor para los jugadores en la pista -->
        <RelativeLayout
            android:id="@+id/pista_juego"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/volleyball_field"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:columnCount="3"
                android:rowCount="2"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_player4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imagen_player4"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/players_image" />

                        <TextView
                            android:id="@+id/nombre_player4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Jugador 4"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_player3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"

                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imagen_player3"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/players_image" />

                        <TextView
                            android:id="@+id/nombre_player3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Jugador 3"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"

                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imagen_player2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/players_image" />

                        <TextView
                            android:id="@+id/nombre_player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Jugador 2"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_player5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"

                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imagen_player5"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/players_image" />

                        <TextView
                            android:id="@+id/nombre_player5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Jugador 5"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_player6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"

                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imagen_player6"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/players_image" />

                        <TextView
                            android:id="@+id/nombre_player6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Jugador 6"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardElevation="0dp"

                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imagen_player1"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/players_image" />

                        <TextView
                            android:id="@+id/nombre_player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Jugador 1"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

        <!-- Contenedor horizontal con scroll para el banquillo -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/pista_juego"
            android:background="@drawable/banquillo"
            android:layout_marginTop="25dp"
            >

            <LinearLayout
                android:id="@+id/banquillo_jugadores"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <!-- Jugadores añadidos se agregarán dinámicamente aquí -->
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <!-- Botón para agregar jugador -->
    <Button
        android:id="@+id/btnAddPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnIntercambiar"
        android:text="Agregar Jugador"
        android:layout_marginBottom="50dp"
        android:onClick="agregarJugador"
        android:background="@color/beige_medium"
        />
    <TextView
        android:id="@+id/numero_jugadores"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_above="@id/btnIntercambiar"
        />

    <Button
        android:id="@+id/btnIntercambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Intercambiar Jugadores"
        android:onClick="intercambiarJugadores"
        android:background="@color/beige_medium"/>


</RelativeLayout>
