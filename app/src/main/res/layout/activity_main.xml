<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/azul_pista">

    <RelativeLayout
        android:id="@+id/fieldLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/azul_pista"
        android:layout_alignParentTop="true">

        <!-- Contenedor para los jugadores en la pista -->
        <RelativeLayout
            android:id="@+id/pista_juego"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/volleyball_field"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical">

            <GridLayout
                android:id="@+id/grid_jugadoresPista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:columnCount="3"
                android:rowCount="2"
                >

            </GridLayout>

        </RelativeLayout>

        <!-- Contenedor horizontal con scroll para el banquillo -->
        <HorizontalScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/pista_juego"
            android:background="@drawable/banquillo"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp"
            >

            <LinearLayout
                android:id="@+id/banquillo_jugadores"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <!-- Jugadores añadidos se agregarán dinámicamente aquí -->
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <!-- Marcador -->
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fieldLayout"
        android:text="34"
        android:textSize="100dp"
        android:textColor="@color/light_blue"
        android:fontFamily="@font/digital_font"/>




    <!-- Botón para agregar jugador -->
    <Button
        android:id="@+id/btnAddPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnIntercambiar"
        android:text="Agregar Jugador"
        android:onClick="agregarJugador"
        android:background="@color/beige_medium"
        />
    <TextView
        android:id="@+id/numero_jugadores"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_above="@id/btnIntercambiar"
        />

    <Button
        android:id="@+id/btnIntercambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Intercambiar Jugadores"
        android:onClick="intercambiarJugadores"
        android:background="@color/beige_medium"/>


</RelativeLayout>
